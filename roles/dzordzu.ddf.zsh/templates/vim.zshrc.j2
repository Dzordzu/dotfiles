# Use vim bindings
export EDITOR=/bin/nvim

## ESC + v as vim edit
autoload -U edit-command-line
zle -N edit-command-line


function my-partial-accept {
   CURSOR+=1
}

zle -N my-partial-accept


ZSH_AUTOSUGGEST_ACCEPT_WIDGETS=(
 		forward-char
		end-of-line
		vi-forward-char
		vi-end-of-line
		vi-add-eol
      down-history
)


ZSH_AUTOSUGGEST_PARTIAL_ACCEPT_WIDGETS=(
      my-partial-accept
)

