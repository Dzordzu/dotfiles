# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"


bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle # mute
bindsym XF86AudioLowerVolume exec pactl -- set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-mute @DEFAULT_SINK@ 0 && pactl -- set-sink-volume @DEFAULT_SINK@ +5%

bindsym Print exec spectacle &
bindsym $mod+Print exec spectacle -a
bindsym $mod+Shift+Print exec spectacle -r
bindsym Mod1+Sys_Req exec spectacle -bc # Fix. Somehow Sys_Req is Print
bindsym $mod+Mod1+Sys_Req exec spectacle -abc # Fix. Somehow Sys_Req is Print
 

mode "launch" {

        bindsym $mod+s split h
        bindsym $mod+v split v

        bindsym t exec i3-sensible-terminal
        bindsym b exec qutebrowser
        bindsym f exec firefox

        bindsym Escape mode "default"
        bindsym $mod+Shift+l mode "default"
        bindsym Return mode "default"
}

set $x_touchpad xinput list | awk ' /[Tt]ouchpad/ {print $0}' | awk 'match($0, /id=([0-9]+)/, a) {print a[1]}'

set $x_mouse xinput list | awk ' /[Mm]ouse/ {print $0}' | awk 'match($0, /id=([0-9]+)/, a) {print a[1]}' 


mode "system" {

        bindsym s exec "shutdown -h now"
        bindsym l exec "i3lock -t -i ~/Wallpapers/lock.resized && i3-msg mode 'default'"
        bindsym e exit
        # like i3
        bindsym i restart 
        bindsym Shift+i exec "~/dotfiles/user/df-install-dotfiles && i3-msg restart && notify-send -t 1200 'Installed new dotfiles'"
        # based on above(closest letter)
        bindsym o reload 
        bindsym Shift+o exec "~/dotfiles/user/df-install-dotfiles && notify-send -t 1200 'Installed new dotfiles'"
        bindsym r exec reboot 
        bindsym w exec "feh --bg-scale --auto-reload ~/Wallpapers/main && i3-msg mode 'default'"

        bindsym t exec "for dev in $($x_touchpad); do xinput disable $dev; done"
        bindsym Shift+t exec "for dev in $($x_touchpad); do xinput enable $dev; done"

        bindsym m exec "for dev in $($x_mouse); do xinput disable $dev; done"
        bindsym Shift+m exec "for dev in $($x_mouse); do xinput enable $dev; done"
         
        bindsym p exec "CURR_IP=$(curl ifconfig.me) && notify-send 'IP copied' $CURR_IP && echo $CURR_IP | xclip -sel clipboard"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+Shift+s mode "default"
}

set $key_command exec --no-startup-id xdotool key --clearmodifiers

bindsym --release $mod+x $key_command              BackSpace
mode "key" {

        bindsym --release h $key_command           Left
        bindsym --release j $key_command           Down
        bindsym --release k $key_command           Up
        bindsym --release l $key_command           Right


        bindsym --release a $key_command           braceleft
        bindsym --release s $key_command           braceright
          
        bindsym --release d $key_command           bracketleft
        bindsym --release f $key_command           bracketright

        bindsym --release e $key_command           equal
        bindsym --release p $key_command           plus
        bindsym --release m $key_command           minus
        bindsym --release u $key_command           underscore

        bindsym --release x $key_command           BackSpace

        bindsym --release colon exec --no-startup-id xdotool key       backslash
        bindsym --release $mod+colon exec --no-startup-id xdotool key  Shift+backslash

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+Shift+k mode "default"
}

bindsym $mod+Shift+l mode "launch"
bindsym $mod+Shift+s mode "system"
bindsym $mod+Shift+k mode "key"
bindsym $mod+Shift+r exec "if [ $(xset -q | grep 'auto repeat:' | awk '{print $3}') = 'on' ]; then xset -r && notify-send 'Turned off an auto key mode'; else xset r && notify-send 'Turned on an auto key mode'; fi"
bindsym $mod+Shift+q kill

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym $mod+Shift+comma workspace next
bindsym $mod+Shift+period workspace prev
bindsym $mod+Shift+slash exec "notify-send Workspace:\ $(i3-msg -t get_workspaces | jq '.[] | select(.focused==true).name')"

bindsym Control+Mod1+b exec qutebrowser 
bindsym Control+Mod1+f exec firefox --new-window

